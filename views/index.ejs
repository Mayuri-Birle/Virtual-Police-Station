<%- include ('./partials/header') %>

<link rel="stylesheet" href="./stylesheets/homepage.css">
<div class="container">
    <div class="jumbotron" >
        <h1 style="font-weight:bolder">CRIME FILES</h1>
        <p style="font-size: smaller;">A Virtual Police Station</p>
    </div>

    <marquee behavior="" direction="" style="background-color:rgba(211, 27, 27, 0.864); color:black;">
        <h6>HELPLINE NUMBERS: Police:100(24x7)(Toll Free) Fire:101 Women-Helpline:1091 Children-Helpline:1098
            CM-Helpline:181 </h6>
    </marquee>

    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2500">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://images.unsplash.com/photo-1453873531674-2151bcd01707?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1225&q=80"
                        class="d-block w-100">
                </div>

                <div class="carousel-item">
                    <img src="https://images.unsplash.com/photo-1485056616736-b0840bdf4732?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1068&q=80"
                        class="d-block w-100">
                </div>
                <div class="carousel-item">
                    <img src="https://images.unsplash.com/photo-1588853200055-69f55237d105?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80"
                        class="d-block w-100">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</div>

<%- include ('./partials/footer') %>