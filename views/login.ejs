<%- include ('./partials/header') %>

<link rel="stylesheet" href="./stylesheets/login.css">
<div class="container">
<div style="margin-top: 10%;">
    <h1 style="font-size: 30px; color:white; padding-bottom: 20px;" class='text-center'>Login</h1>
    <form action="/login" method="POST" class="text-center">
        <div class="form-row">
            <div class="form-group col-md-12 " >
                <input type="text" class="form-control con" name="phn" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Your Username." >
                <small id="emailHelp" class="form-text text-muted con">We'll never share your phone no. with anyone else.</small>
            </div>
        
            <div class="form-group col-md-12">
                <input type="password" class="form-control" name="pass" id="exampleInputPassword1" placeholder="Enter Your Password">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary" >Sign In </button>
                <button type="reset" class="btn btn-danger" >Cancel </button>
            </div>
        </div>

        <div id="login-help">
            <p style="color:white;"> Forgot your password? <a href="">Click here to reset it</a></p>
        </div>
    </form>
</div>
</div>
<%- include ('./partials/footer') %>